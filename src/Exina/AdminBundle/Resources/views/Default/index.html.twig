{% extends "::base.html.twig" %}

{% block heading %}
Dashboard
{% endblock %}

{% block body %}
    <div class="row-fluid">
        <div class="span12 tac">
            <ul class="ov_boxes">
                <li>
                    <div class="p_bar_up p_canvas">{{weekly_sale|join(',')}}</div>
                    <div class="ov_text">
                        <strong>${{weekly_sum|number_format}}</strong>
                        Weekly Sale
                    </div>
                </li>
                <li>
                    <div class="p_line_up p_canvas">{{monthly_sale|join(',')}}</div>
                    <div class="ov_text">
                        <strong>${{monthly_sum|number_format}}</strong>
                        Monthly Sale
                    </div>
                </li>
                <li>
                    <div class="p_line_up p_canvas">3,5,9,7,12,8,16</div>
                    <div class="ov_text">
                        <strong>2304</strong>
                        Unique visitors (last 24h)
                    </div>
                </li>
                <li>
                    <div class="p_line_down p_canvas">20,16,14,18,15,14,14,13,12,10,10,8</div>
                    <div class="ov_text">
                        <strong>30240</strong>
                        Unique visitors (last week)
                    </div>
                </li>
            </ul>
        </div>
    </div>

    <div class="row-fluid">
        <div class="span5">
            <h3 class="heading">Visitors by Country <small>last week</small></h3>
            <div id="fl_2" style="height:200px;width:80%;margin:50px auto 0"></div>
        </div>
        <div class="span7">
            <div class="heading clearfix">
                <h3 class="pull-left">Another Chart</h3>
                <span class="pull-right label label-info ttip_t" title="Here is a sample info tooltip">Info</span>
            </div>
            <div id="fl_1" style="height:270px;width:100%;margin:15px auto 0"></div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
{{parent()}}
    <!-- small charts -->
    <script src='{{asset("js/jquery.peity.min.js")}}'></script>

        <!-- charts -->
    <script src='{{asset("lib/flot/jquery.flot.min.js")}}'></script>
    <script src='{{asset("lib/flot/jquery.flot.resize.min.js")}}'></script>
    <script src='{{asset("lib/flot/jquery.flot.pie.min.js")}}'></script>

    <!-- dashboard functions -->
    <script src='{{asset("js/dashboard.js")}}'></script>

{% endblock %}
