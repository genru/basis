{% extends '::base.html.twig' %}


{% block javascripts %}
    {{ parent() }}

    <!-- sortable/filterable list -->
    <script src='{{asset("lib/datatables/jquery.dataTables.min.js")}}'></script>
    <script src='{{asset("lib/datatables/jquery.dataTables.bootstrap.min.js")}}'></script>
    <script type="text/javascript">
        $(document).ready(function() {
            $('#tab_list').dataTable({
                "sDom": "<'row'<'span6'<'dt_actions'>l><'span6'f>r>t<'row'<'span6'i><'span6'p>>",
                "sPaginationType": "bootstrap_alt",
                "oLanguage": {
                    "sLengthMenu": "_MENU_ records per page"
                },
            });
        })
    </script>
{% endblock %}


{% block heading %}
Customers
{% endblock %}


{% block body %}

<div class="row-fluid">
<div class="span12">
    {% for error in errors %}
        <div class="alert alert-error">
            <a class="close" data-dismiss="alert">&times;</a>{{ error.message }}
        </div>
    {% endfor %}

    <table class="table table-hover table-bordered" id="tab_list">
        <thead>
        <tr>
            <th>name</th>
            <th>email</th>
            <th>organization</th>
            <th>country</th>
            <th>create at</th>
        </tr>
        </thead>
        <tbody>
            {% for customer in customers %}
                <tr>
                    <td><a href="{{path('ex_admin_customer_update', {'id':customer.id})}}" title="see details"> {{customer.name}}</a></td>
                    <td>
                        {{customer.email}}
                    </td>
                    <td>
                        {{customer.organization}}
                    </td>
                    <td>{{customer.country}}</td>
                    <td>{{ customer.CreatedAt('Y-m-d H:m:i') }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    <a href="{{path('ex_admin_customer_new')}}" class="btn btn-gebo" title="create new customer"> <i class="icon-plus icon-white"></i> Add new </a>

</div> <!-- end span12 -->

</div>

{% endblock %}
